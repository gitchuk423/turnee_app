<%= provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@attorney) do |f| %>
      
      <%= render 'shared/error_messages',  object: @attorney%>
      
      <%= f.label :first_name %>
      <%= f.text_field :first_name %> 
      
      <%= f.label :middle_initial %>
      <%= f.select(:middle_initial, ('A'..'Z').to_a) %>
       
      <%= f.label :last_name %>
      <%= f.text_field :last_name %> 
      
      <%= f.label :attorney_type, "What is your title? (e.g, \"Patent Attorney\")" %>
      <%= f.text_field :attorney_type %>
      
      <%= f.label :country %>
      <%= f.country_select :country, priority: %w(US CA), prompt: 'Please select a country' %>
      
      <%= f.label :city %>
      <%= f.text_field :city %>
      
      <%= f.label :state %>
      <%= render partial: 'shared/attorneys_subregion_select'%><br>
    
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %> 
      
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

